generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model File {
  id                      String     @id @default(uuid())
  name                    String
  path                    String     
  status                  String
  createdAt               DateTime   @map("created_at") @default(now())
  updatedAt               DateTime   @map("updated_at") @updatedAt

  @@map("files")
}
